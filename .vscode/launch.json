{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Scrapy: Run Jisho",
            "type": "python",
            "request": "launch",
            "module": "scrapy",
            "args": ["crawl", "jisho", "-a", "item=行ってきます"],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/jishoscrapy"
        }
    ]
}